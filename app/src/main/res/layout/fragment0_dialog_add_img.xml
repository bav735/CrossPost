<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_margin="10dp"
            android:button="@null"
            android:drawableRight="@drawable/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:id="@+id/fragment0_rb_gallery"
            android:layout_gravity="center_vertical"/>

        <RadioButton
            android:layout_margin="10dp"
            android:button="@null"
            android:drawableRight="@drawable/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:id="@+id/fragment0_rb_camera"
            android:layout_gravity="center_vertical"/>

        <RadioButton
            android:layout_margin="10dp"
            android:button="@null"
            android:drawableRight="@drawable/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Image"
            android:id="@+id/fragment0_rb_clear"
            android:layout_gravity="center_vertical"/>

        <RadioButton
            android:layout_margin="10dp"
            android:button="@null"
            android:drawableRight="@drawable/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rotate Image by 90"
            android:id="@+id/fragment0_rb_rotate"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>